<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Encrypted Chat list</title>
  <link rel="stylesheet" type="text/css" href="/chat/nav.css">
  <!-- <link rel="stylesheet" src="/chat/style.css"> -->
</head>
<body>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <nav role="navigation" style="width: 100%;">
        <ul>
          <li><a class="navlink droplink" href="#" aria-haspopup="true">+</a>
            <ul class="dropdown" aria-label="submenu">
                <li><a class="navlink" href="/">Home</a></li>
                <% if (logged){%> 
                    <li><a class="navlink" href="/user/<%=username%>">Profile</a></li>
                    <li><a class="navlink" href="/create">Create Room</a></li>
                    <li><a class="navlink" href="/logout">Logout</a></li>
                <%} else {%>
                    <li><a class="navlink" href="/login">Login</a></li>
                    <li><a class="navlink" href="/register">Register</a></li>
                <%}%>
            </ul>
          </li>
        </ul>
    </nav>
    </br>
    </br>
    </br>
    </br>
    <div class="rooms" style="display: flex; justify-content: space-evenly; flex-direction: row;">
        <%if (rooms != null && rooms != undefined && rooms != []) {%>
            <%rooms.forEach(function(room){%>
                <div id="roomitem" style="text-align: center; width: 20%;">
                    <span>room name: <%=room.name%></span></br>
                    <span>room topic: <%=room.topic%></span></br>
                    <%if (!room.locked) {%>
                        <a href="/join/<%=room.id%>">Join room</a>
                    <%} else {%>
                        <a href="/join/<%=room.id%>?disabled=true" disabled>Room Locked</a>
                    <%}%>
                </div>
            <%})%>
        <%} else {%>
            <span>No chatrooms currently available. Create a chat room <a href="/create">here</a></span>
        <%}%>
    </div>
